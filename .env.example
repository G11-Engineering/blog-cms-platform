# Root environment variables for Docker Compose and scripts
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_USER_PASSWORD=user_password
POSTGRES_CONTENT_PASSWORD=content_password
POSTGRES_MEDIA_PASSWORD=media_password
POSTGRES_CATEGORY_PASSWORD=category_password
POSTGRES_COMMENT_PASSWORD=comment_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Asgardeo SSO Configuration
ASGARDEO_ORG_NAME=your-org-name
ASGARDEO_CLIENT_ID=your-frontend-client-id
ASGARDEO_CLIENT_SECRET=your-frontend-client-secret
ASGARDEO_M2M_CLIENT_ID=your-m2m-client-id
ASGARDEO_M2M_CLIENT_SECRET=your-m2m-client-secret

# Service URLs (for scripts and health checks)
FRONTEND_URL=http://localhost:3000
USER_SERVICE_URL=http://localhost:3001
CONTENT_SERVICE_URL=http://localhost:3002
MEDIA_SERVICE_URL=http://localhost:3003
CATEGORY_SERVICE_URL=http://localhost:3004
COMMENT_SERVICE_URL=http://localhost:3005

# Database Ports (for health checks)
POSTGRES_USER_PORT=5433
POSTGRES_CONTENT_PORT=5434
POSTGRES_MEDIA_PORT=5435
POSTGRES_CATEGORY_PORT=5436
POSTGRES_COMMENT_PORT=5437

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=blog-cms-media
AWS_S3_ENDPOINT=
AWS_S3_FOLDER=uploads

# Cloudflare R2 Configuration (optional)
R2_BUCKET=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT=
R2_PUBLIC_URL=

# CDN Configuration (optional)
CDN_URL=
