# Blog CMS Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# JWT Configuration (All Services)
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ==============================================
# Database Passwords
# ==============================================
POSTGRES_USER_PASSWORD=user_password_change_in_production
POSTGRES_CONTENT_PASSWORD=content_password_change_in_production
POSTGRES_MEDIA_PASSWORD=media_password_change_in_production
POSTGRES_CATEGORY_PASSWORD=category_password_change_in_production
POSTGRES_COMMENT_PASSWORD=comment_password_change_in_production

# ==============================================
# Asgardeo SSO Configuration
# ==============================================
# Get these from: https://console.asgardeo.io > Applications > Your Application

# Organization Name
ASGARDEO_ORG_NAME=your-org-name

# Frontend Authentication (Traditional Web Application)
ASGARDEO_BASE_URL=https://api.asgardeo.io/t/your-org-name
ASGARDEO_CLIENT_ID=your-frontend-client-id
ASGARDEO_CLIENT_SECRET=your-frontend-client-secret

# Backend M2M (Machine to Machine) for User Sync
# Create separate M2M application for backend services
# Required scopes: internal_user_mgt_update, internal_user_mgt_view
# API Authorization: Enable SCIM2 Users API
ASGARDEO_M2M_CLIENT_ID=your-m2m-client-id
ASGARDEO_M2M_CLIENT_SECRET=your-m2m-client-secret

# ==============================================
# Service URLs (for inter-service communication)
# ==============================================
CATEGORY_SERVICE_URL=http://category-service:3004
USER_SERVICE_URL=http://user-service:3001
